<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_level_select">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <LinearLayout
            android:id="@+id/freell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/holo_normal"
                    style="@style/free"
                    android:text="@string/fr_time" />

                <EditText
                    android:id="@+id/fr_time"
                    android:hint="@string/fr_hTime"
                    android:textColor="@color/holo_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/free"
                    android:inputType="number"
                    android:textColorHint="@color/black_overlay"
                    android:gravity="center_horizontal|center_vertical" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/holo_normal"
                    style="@style/free"
                    android:text="@string/fr_size" />

                <EditText
                    android:id="@+id/fr_width"
                    android:hint="@string/fr_hWidth"
                    android:textColor="@color/holo_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    style="@style/free"
                    android:textColorHint="@color/black_overlay"
                    android:gravity="center_horizontal|center_vertical"
                    android:digits="1234567" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/holo_normal"
                    style="@style/free"
                    android:text="@string/fr_hSize" />

                <EditText
                    android:id="@+id/fr_height"
                    android:hint="@string/fr_hHeight"
                    android:textColor="@color/holo_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    style="@style/free"
                    android:textColorHint="@color/black_overlay"
                    android:gravity="center_horizontal|center_vertical" />

            </LinearLayout>

            <CheckBox
                android:id="@+id/fr_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fr_content"
                style="@style/free"
                android:textColor="@color/holo_normal"/>

            <LinearLayout
                android:id="@+id/frll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/holo_normal"
                    android:layout_marginLeft="35dp"
                    style="@style/free"
                    android:text="@string/fr_find" />

                <EditText
                    android:id="@+id/fr_first"
                    android:hint="@string/fr_hFalse"
                    android:textColor="@color/holo_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/free"
                    android:textColorHint="@color/black_overlay"
                    android:gravity="center_horizontal|center_vertical" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/holo_normal"
                    style="@style/free"
                    android:text="@string/fr_in" />

                <EditText
                    android:id="@+id/fr_second"
                    android:hint="@string/fr_hTrue"
                    style="@style/free"
                    android:layout_width="wrap_content"
                    android:textColor="@color/holo_normal"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/black_overlay"
                    android:gravity="center_horizontal|center_vertical" />

            </LinearLayout>

        <RelativeLayout
            android:id="@+id/frrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:id="@+id/frm1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fr01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/free"
                    android:textColor="@color/holo_normal"
                    android:text="@string/fr_hFalse"/>

                <TextView
                    android:id="@+id/fr02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/free"
                    android:textColor="@color/holo_normal"
                    android:text="@string/fr_hFalse"/>

                <TextView
                    android:id="@+id/fr03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/free"
                    android:textColor="@color/holo_normal"
                    android:text="@string/fr_hFalse"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/frm2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/frm1"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/fr04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/free"
                    android:textColor="@color/holo_normal"
                    android:text="@string/fr_hFalse"/>

                <TextView
                    android:id="@+id/fr05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/free"
                    android:textColor="@color/black_overlay"
                    android:text="@string/fr_hTrue"/>

                <TextView
                    android:id="@+id/fr06"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/free"
                    android:textColor="@color/holo_normal"
                    android:text="@string/fr_hFalse"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/frm3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/frm2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fr07"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/free"
                    android:textColor="@color/holo_normal"
                    android:text="@string/fr_hFalse"/>

                <TextView
                    android:id="@+id/fr08"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/free"
                    android:textColor="@color/holo_normal"
                    android:text="@string/fr_hFalse"/>

                <TextView
                    android:id="@+id/fr09"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/free"
                    android:textColor="@color/holo_normal"
                    android:text="@string/fr_hFalse"/>

            </LinearLayout>

        </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/freell"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/fr_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/free"
                android:text="@string/fr_start"/>

            <Button
                android:id="@+id/fr_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                style="@style/free"
                android:text="@string/back"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>