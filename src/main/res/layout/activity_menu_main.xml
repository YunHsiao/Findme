<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainrl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_menu_main" >

    <TextView
        android:id="@+id/mainachieve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/mainachieve"
        android:layout_alignParentRight="true"/>

    <Button
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_info" />
	
    <RelativeLayout 
        android:id="@+id/marl"
   		android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_centerHorizontal="true"
    	android:layout_centerVertical="true" >    

        <TextView
            android:id="@+id/entv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="240dp"
            android:height="30dp" />
        
	    <Button
	        android:id="@+id/startgame"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
			android:layout_below="@+id/entv"
	        android:background="@drawable/btn_start" />
	        <!--
	        android:height="30dp"
	        android:text="@string/text"
	       	android:width="200dp"-->

        <TextView
            android:id="@+id/entv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/startgame"
            android:width="60dp"
            android:height="60dp" />

        <Button
	        android:id="@+id/exitgame"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/entv2"
            android:layout_alignBottom="@+id/entv2"
	        android:background="@drawable/btn_exit" />
	        <!--
	        android:height="30dp"
	        android:text="@string/exit"
	        android:width="200dp" -->

	</RelativeLayout>

    <TextView
        android:id="@+id/entv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/marl"
        android:layout_centerHorizontal="true"
        android:width="30dp"
        android:height="70dp" />

    <Button
        android:id="@+id/settings"
        android:layout_width="63dp"
        android:layout_height="68dp"
        android:layout_below="@+id/marl"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/entv3"
        android:background="@drawable/btn_menu_settings" />
	
</RelativeLayout>